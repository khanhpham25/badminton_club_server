<header class="main-header">
  <%= link_to root_path, class: "logo" do %>
    <span class="logo-mini"><b>B</b>C</span>
    <span class="logo-lg"><b>Badminton</b>Club</span>
  <% end %>
  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="https://image.ibb.co/iJEvKb/default_user.png" class="user-image" alt="User Image">
            <span class="hidden-xs"><%= @current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <img src="https://image.ibb.co/iJEvKb/default_user.png" class="img-circle" alt="User Image">
              <p>
                <%= @current_user.name %>
                <small>Member since <%= @current_user.created_at.strftime('%F')%></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", @current_user, class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Sign out", logout_path, method: :delete,
                  class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
