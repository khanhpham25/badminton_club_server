<div class="content-wrapper" style="min-height: 1126px;">
  <section class="content-header">
    <h1>Edit Club </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <i class="fa fa-dashboard"></i> Home</a>
        <% end %>
      </li>
      <li><%= link_to "Clubs", clubs_path %></li>
      <li><%= link_to @club.name, @club %></li>
      <li class="active"><%= link_to "Edit", edit_club_path(@club) %></li>
    </ol>
  </section>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="manage-content panel panel-default">
        <div class="panel-body">
          <%= form_for @club do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            <div class="row">
    		      <div class="col-xs-4 text-center">
                <div class="form-group">
                  <% avatar = @club.avatar? ? @club.avatar.url : 'http://robohash.org/sitsequiquia.png?size=120x120' %>
                  <%= image_tag avatar,
                    width: 120, height: 120, class: 'img-circle avatar avatar-original', id: 'img_prev' %>
                  </br></br>
                  <span class="btn btn-default btn-file">
                    Upload Image
                    <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", id: "avatar-upload" %>
                  </span>
                  <%= f.hidden_field :avatar_cache %>
                </div>

              </div>
              <div class="col-xs-8">
                <div class="row">
                  <div class="col-xs-12">
                    <h1 class="only-bottom-margin"><%= @club.name %></h1>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12">
                    <div class="form-group">
                      <%= f.label :name %>
                      <%= f.text_field :name, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :description %>
                      <%= f.text_area :description, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :average_level %>
                      <%= f.select :average_level, [["--Select Level"], ["Beginner", 1], ["Amateur", 2], ["Professional", 3]],
                        {}, {class: "form-control"}%>
                    </div>

                    <div class="form-group">
                      <%= f.label :recruiting_status %>
                      <%= f.select :is_recruiting, [["--Select Status"], ["Yes", true], ["No", false]],
                        {}, {class: "form-control"}%>
                    </div>

                    <div class="form-group">
                      <%= f.label :allow_friendly_match_status %>
                      <%= f.select :allow_friendly_match, [["--Select Status"], ["Yes", true], ["No", false]],
                        {}, {class: "form-control"}%>
                    </div>


                    <%= f.submit "Update", class: "btn btn-primary pull-right" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
