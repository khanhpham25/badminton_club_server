<div class="content-wrapper" style="min-height: 1126px;">
  <section class="content-header">
    <h1>Show Club </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <i class="fa fa-dashboard"></i> Home</a>
        <% end %>
      </li>
      <li><%= link_to "Clubs", clubs_path %></li>
      <li class="active"><%= link_to @club.name, @club %></li>
    </ol>
  </section>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="manage-content panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 lead">Club Profile<hr></div>
          </div>
          <div class="row">
  		      <div class="col-xs-4 text-center">
              <% avatar = @club.avatar? ? @club.avatar.url : 'http://robohash.org/sitsequiquia.png?size=120x120' %>
              <%= image_tag avatar, width: 120, height: 120,
                class: 'img-circle avatar avatar-original ', id: 'img_prev' %>
            </div>
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-12">
                  <h1 class="only-bottom-margin"><%= @club.name %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <span class="text-muted">Description:</span> <%= @club.description %><br>
                  <span class="text-muted">Location:</span>
                  <%= @club.location %>
                  <span class="text-muted">Average Level:</span>
                  <%= "Beginner" if @club.average_level == 1%>
                  <%= "Amateur" if @club.average_level == 2 %>
                  <%= "Professional" if @club.average_level == 3 %><br>
                  <span class="text-muted">Number of members:</span>
                  <%= @club.user_clubs.count %><br>
                  <span class="text-muted">Recruiting Status:</span>
                  <%= @club.is_recruiting ? "Yes" : "No" %><br>
                  <span class="text-muted">Allow Friendly Match:</span>
                  <%= @club.allow_friendly_match ? "Yes" : "No" %>
                  <br><br>
                  <small class="text-muted">Created: <%= @club.created_at.strftime("%F") %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-right">
              <hr>
              <%= link_to edit_club_path(@club) do %>
                <button class="btn btn-default">
                  <i class="fa fa-pencil"></i> Edit
                </button>
              <% end %>
              <%= link_to @club, method: :delete,
                data: {confirm: "You sure?", disable_with: 'processing...'} do %>
                <button class="btn btn-danger" >
                  <i class="fa fa-trash"></i>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
