<div class="content-wrapper" style="min-height: 1126px;">
  <section class="content-header">
    <h1>Show User </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <i class="fa fa-dashboard"></i> Home</a>
        <% end %>
      </li>
      <li><%= link_to "Users", users_path %></li>
      <li class="active"><%= link_to @user.name, @user %></li>
    </ol>
  </section>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="manage-content panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 lead">User profile<hr></div>
          </div>
          <div class="row">
  		      <div class="col-xs-4 text-center">
              <img class="img-circle avatar avatar-original" style="-webkit-user-select:none;
                display:block; margin:auto;" src="http://robohash.org/sitsequiquia.png?size=120x120">
            </div>
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-12">
                  <h1 class="only-bottom-margin"><%= @user.name %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <span class="text-muted">Email:</span> <%= @user.email %><br>
                  <span class="text-muted">Mobile:</span> <%= @user.mobile %><br>
                  <span class="text-muted">Gender:</span>
                  <%= "Male" if @user.gender == 1%>
                  <%= "Female" if @user.gender == 2 %>
                  <%= "Other" if @user.gender == 3 %><br>
                  <span class="text-muted">Badminton Level:</span>
                  <%= "Beginner" if @user.badminton_level == 1%>
                  <%= "Amateur" if @user.badminton_level == 2 %>
                  <%= "Professional" if @user.badminton_level == 3 %><br>
                  <span class="text-muted">Main Racket:</span> <%= @user.main_rackquet %><br>
                  <span class="text-muted">Role:</span>
                  <%= @user.is_admin ? "Admin" : "User" %><br>
                  <span class="text-muted">Account Type:</span>
                  <%= @user.provider ? @user.provider : "Normal" %>
                  <br><br>
                  <small class="text-muted">Created: <%= @user.created_at.strftime("%F") %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <hr>
              <%= link_to edit_user_path(@user) do %>
                <button class="btn btn-default pull-right">
                  <i class="fa fa-pencil"></i> Edit
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
