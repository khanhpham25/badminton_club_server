<div class="content-wrapper" style="min-height: 1126px;">
  <section class="content-header">
    <h1>Users </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <i class="fa fa-dashboard"></i> Home</a>
        <% end %>
      </li>
      <li class="active"><%= link_to "Users", users_path %></li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-xs-12" >
        <div class="clearfix">
          <%= link_to "Create User", new_user_path, class: "btn btn-primary pull-right" %>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <table id="user-tables" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Mobile</th>
                  <th>Gender</th>
                  <th>Badminton Level</th>
                  <th>Role</th>
                  <th>Account Type</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Mobile</th>
                  <th>Gender</th>
                  <th>Badminton Level</th>
                  <th>Role</th>
                  <th>Account Type</th>
                </tr>
              </tfoot>
              <tbody>
                <% @users.each do |u| %>
                  <tr>
                    <td>
                      <%= link_to u do
                        u.name
                      end %>
                    </td>
                    <td><%= u.email%></td>
                    <td><%= u.mobile%></td>
                    <td>
                      <%= "Male" if u.gender == 1%>
                      <%= "Female" if u.gender == 2 %>
                      <%= "Other" if u.gender == 3 %><br>
                    </td>
                    <td>
                      <%= "Beginner" if u.badminton_level == 1%>
                      <%= "Amateur" if u.badminton_level == 2 %>
                      <%= "Professional" if u.badminton_level == 3 %>
                    </td>
                    <td><%= u.is_admin ? "Admin" : "User" %></td>
                    <td><%= u.provider ? u.provider : "Normal" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
